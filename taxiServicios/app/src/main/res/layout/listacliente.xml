<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fechahora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Fecha/Hora"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="direccion"
                android:textSize="19sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="status"
                android:textSize="20sp"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/noTaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noTaxi"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/descripcionVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="descripcionVehiculo"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/costo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="costo"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="gone" />
            <Button
                android:id="@+id/btnEfectoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/bordes_redondeados"
                android:text="Boton"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/evaluacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="evaluacion"
                android:textColor="#000"
                android:textSize="20sp"
                tools:visibility="gone" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>