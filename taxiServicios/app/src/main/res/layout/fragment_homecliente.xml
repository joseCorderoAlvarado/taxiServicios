<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/engrywy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Por cada 10 servicios uno es gratis"
                    android:textSize="18sp" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/serviciogratis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#e5be01"
                    android:text="Servicios pedidos"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnnuevoservicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_margin="5dp"
                    android:background="#ffff00"
                    android:text="Solicitar Taxi"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:background="@android:color/white"
                    android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    android:visibility="gone"
                    card_view:cardUseCompatPadding="true">
                    <TextView
                        android:id="@+id/tvconfirmado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text=""
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>