<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo Servicio $40.00"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tvservicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Servicios pedidos"
                    android:textSize="20sp" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/engrywy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Recuerda cada 10 servicios 1 es GRATIS"
                    android:textSize="18sp" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/serviciogratis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Servicios pedidos"
                    android:textSize="20sp" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:id="@+id/tvconfirmado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>